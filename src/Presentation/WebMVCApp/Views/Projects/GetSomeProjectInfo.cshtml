@model IEnumerable<Domain.ProjectAggregation.ProjectInfo>

@{
    ViewData["Title"] = "Projects";
}

<h4>@ViewData["Title"]</h4>

<hr />
<p>
    <a asp-action="DefineANewProject">Define A New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    <a asp-action="ChangeTheProjectName" asp-route-id="@item.Id">Name</a> |
                    <a asp-action="GetTheProjectInfo" asp-route-id="@item.Id">Info</a> |
                    <a asp-action="ArchiveTheProject" asp-route-id="@item.Id">Archive</a> |
                    <a asp-controller="Sprints" asp-action="GetSomeSprintInfo" asp-route-projectId="@item.Id">Sprints</a>
                </td>
            </tr>
        }
    </tbody>
</table>